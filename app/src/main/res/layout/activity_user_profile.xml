<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/body_baground"
    android:layout_height="match_parent"
    tools:context=".ui.activities.account_activities.for_home.UserProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/user_profile_toolbar_collapse_in_user_profile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorPrimary"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:id="@+id/user_profile_activity_image_in_user_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/avatar_default"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/user_profile_activity_toolbar_in_user_profile"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/transparent"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:orientation="vertical">
                <com.moodsapp.emojis_library.Helper.EmojiconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile information"
                    android:textColor="@color/nearColorPrimary"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:layout_marginTop="@dimen/_5sdp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_profile_nationality_flag_in_user_profile"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/flag_rwanda"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.moodsapp.emojis_library.Helper.EmojiconTextView
                                android:id="@+id/user_profile_user_name_in_user_profile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textSize="@dimen/_13sdp"
                                android:gravity="left"
                                android:text="Profile name"
                                android:layout_weight="1"
                                />
                            <ImageView
                                android:src="@drawable/icon_private_user_sign_gray"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"/>
                        </LinearLayout>
                        <com.moodsapp.emojis_library.Helper.EmojiconTextView
                            android:id="@+id/user_profile_status_in_user_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:text="Profile name"/>
                        <com.moodsapp.emojis_library.Helper.EmojiconTextView
                            android:id="@+id/user_profile_nationality_in_user_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:textSize="@dimen/_10sdp"
                            android:text="Rwanda"/>
                    </LinearLayout>
                </LinearLayout>
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_8sdp"
                   android:background="@drawable/list_separator_top"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <com.moodsapp.emojis_library.Helper.EmojiconTextView
                        android:id="@+id/user_profile_phone_number_in_user_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+(250) 781 049 218"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        android:layout_weight="2"/>
                    <ImageView
                        android:id="@+id/user_profile_open_chat_button_in_user_profile"
                        android:layout_width="@dimen/_17sdp"
                        android:src="@drawable/icon_read_message_in_user_profile"
                        android:layout_height="@dimen/_17sdp"/>
                    <ImageView
                        android:id="@+id/user_profile_call_button_in_user_profile"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_width="@dimen/_17sdp"
                        android:src="@drawable/icon_call_in_user_profile"
                        android:layout_height="@dimen/_17sdp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/list_view_media_chats_parent_layout_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:background="#f5f3f0">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_separator_top">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/list_view_media_chats_parent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.moodsapp.emojis_library.Helper.EmojiconTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Media"
                        android:textColor="@color/nearColorPrimary"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        android:layout_weight="1" />
                    <com.moodsapp.emojis_library.Helper.EmojiconTextView
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/user_profile_media_count_in_user_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/user_profile_media_message_view"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:background="#f5f3f0">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_separator_top">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.moodsapp.emojis_library.Helper.EmojiconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Setting"
                    android:textColor="@color/nearColorPrimary"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"/>
                <FrameLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/frame_setting_container_in_user_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Common_group_list_view_parent_layout_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:background="#f5f3f0">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_separator_top">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Common_group_list_view_parent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <com.moodsapp.emojis_library.Helper.EmojiconTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Group in common"
                    android:textStyle="bold"
                    android:textColor="@color/nearColorPrimary"
                    android:textSize="@dimen/_13sdp"
                    android:layout_weight="1"/>
                    <com.moodsapp.emojis_library.Helper.EmojiconTextView
                        android:id="@+id/user_profile_common_group_count_in_user_profile"
                        android:textSize="@dimen/_12sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/textviewUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_profile_fragment_group_all_group_view">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>