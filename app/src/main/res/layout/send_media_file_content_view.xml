<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/all_media_view_layout"
        android:layout_width="match_parent"
        android:padding="@dimen/_25sdp"
        android:background="#fff"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/send_media_file_media_type_grid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:horizontalSpacing="@dimen/_4sdp"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/_4sdp" />
    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/document_files_media_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/hide_documents_files_media_type"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/content_minimize"/>
        </LinearLayout>

        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/send_media_document_files_media_type_grid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:horizontalSpacing="@dimen/_4sdp"
            android:numColumns="3"
            android:layout_margin="@dimen/_25sdp"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/_4sdp" />
    </RelativeLayout>
</RelativeLayout>
