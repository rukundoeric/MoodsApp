<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/layout_for_friend_chat_contact_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo">
    <LinearLayout
        style="@style/iconImageInMessageUserFriend"
        android:layout_marginLeft="@dimen/_2sdp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_icon_for_contact_friend_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/avatar_default"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contact_message_friend_wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/balloon_incoming_normal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_5sdp"
        android:paddingTop="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <com.moodsapp.emojis_library.Helper.EmojiconTextView
                    android:id="@+id/contact_number_view_in_contact_item_friend"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textSize="@dimen/abc_chat_conversation_message_text_size"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eric prestein 2 more contacts"
                    android:textColor="#0099e6"
                    android:ellipsize="end"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">
                <com.moodsapp.emojis_library.Helper.EmojiconTextView
                    android:id="@+id/time_message_image_for_friend_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:39"
                    android:textSize="@dimen/abc_chat_conversation_time_text_size"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/list_separator_top"
            android:layout_height="wrap_content">
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity=""
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingBottom="@dimen/_5sdp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/third_image_contact_in_contact_item_for_friend"
                style="@style/iconImageInMessageUserFriend"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:src="@drawable/avatar_default"
                app:civ_border_width="@dimen/_1sdp"
                app:civ_border_color="#ffffff"
                android:layout_alignParentRight="true"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/second_image_contact_in_contact_item_for_friend"
                style="@style/iconImageInMessageUserFriend"
                android:layout_marginRight="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:src="@drawable/avatar_default"
                app:civ_border_width="@dimen/_1sdp"
                android:layout_alignParentRight="true"
                app:civ_border_color="#ffffff"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/first_image_contact_in_contact_item_for_friend"
                style="@style/iconImageInMessageUserFriend"
                android:src="@drawable/avatar_default"
                app:civ_border_width="@dimen/_1sdp"
                android:layout_alignParentRight="true"
                app:civ_border_color="#ffffff"/>

            <com.moodsapp.emojis_library.Helper.EmojiconTextView
                android:id="@+id/view_all_contact_in_contact_item_for_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_chat_conversation_message_text_size"
                android:text="VIEW ALL CONTACT"
                android:textColor="#0275a3"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>