<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_wallpaper"
    android:id="@+id/chat_conversation_container"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.account_activities.for_chat.MainChat.Chat_Activity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/menu_item_chat_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:visibility="gone">
            <android.support.v7.widget.ActionMenuView
                android:id="@+id/menu_item_chat_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">
                <android.support.v7.widget.Toolbar
                    android:id="@+id/conversation_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?android:actionBarSize"
                    android:background="@color/colorPrimary"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:titleTextAppearance="@style/HomeToolbar.TitleText"
                    app:subtitleTextAppearance="@style/HomeToolbar.SubTitleText" />
            </android.support.design.widget.AppBarLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
               <android.support.v7.widget.RecyclerView
                   android:id="@+id/chat_displayor"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   />

        </LinearLayout>
        <LinearLayout
            android:gravity="bottom"
            android:background="#1b215e70"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="#00ffffff"
                android:layout_marginBottom="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/open_more_media_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:backgroundTint="#fff"
                        app:borderWidth="0dp"
                        app:elevation="@dimen/_6sdp"
                        app:fabSize="normal"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_1sdp"
                        style="@style/floatingButoonAttachMedia"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_1sdp" />

                    <LinearLayout
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="bottom"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@drawable/naza_input"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_10sdp">

                                <LinearLayout
                                    android:id="@+id/reply_layout_profile_information_text_enter"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:orientation="horizontal"
                                    android:visibility="gone"
                                    android:background="@drawable/panel">
                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/image_reply_profile_pic_in_text_enter"
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:src="@drawable/avatar_default"
                                        app:civ_border_width="@dimen/_1sdp"
                                        app:civ_border_color="@color/colorDecoration1"/>
                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            android:layout_marginLeft="@dimen/_5sdp"
                                            android:paddingRight="@dimen/_4sdp">
                                            <TextView
                                                android:id="@+id/message_reply_name_in_chat_text_enter"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Eric"
                                                android:textColor="@color/colorDecoration1"
                                                android:textStyle="bold"
                                                android:textSize="@dimen/_11sdp"
                                                android:ellipsize="marquee"
                                                android:paddingRight="@dimen/_15sdp"
                                                android:singleLine="true"
                                                />
                                            <TextView
                                                android:id="@+id/message_reply_in_chat_text_enter"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:maxLines="4"
                                                android:ellipsize="end"
                                                android:text="Hello how are you?"
                                                android:textSize="@dimen/_10sdp"
                                                android:paddingRight="@dimen/_15sdp"
                                                />
                                        </LinearLayout>
                                    </LinearLayout>
                                    <ImageView
                                        android:id="@+id/cancel_message_reply_in_item_message_friend"
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_marginRight="@dimen/_3sdp"
                                        app:srcCompat="@drawable/ic_cancel_in_chat_text_enter" />

                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">
                                    <RelativeLayout
                                        android:paddingLeft="@dimen/_3sdp"
                                        android:gravity="center"
                                        android:paddingRight="@dimen/_3sdp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/_20sdp"
                                        android:orientation="vertical">
                                        <ImageView
                                            android:id="@+id/start_recording_in_chat_activity"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:clickable="true"
                                            app:srcCompat="@drawable/ic_settings_voice_black_24dp"/>
                                    </RelativeLayout>
                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:visibility="visible">
                                        <com.moodsapp.emojis_library.Helper.EmojiconEditText
                                            android:id="@+id/chat_message_text"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Type a Message"
                                            android:ellipsize="end"
                                            android:layout_weight="1"
                                            android:textSize="@dimen/_12sdp"
                                            android:textColor="#262626"
                                            android:background="#0000"
                                            emojicon:emojiconSize="22sp" />
                                        <ImageView
                                            android:id="@+id/open_chat_emojis"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            app:srcCompat="@drawable/ic_insert_emoticon_black_24dp"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/chat_button_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/yes_ok"
                    app:backgroundTint="#fff"
                    app:borderWidth="0dp"
                    app:elevation="@dimen/_6sdp"
                    app:fabSize="normal"
                    android:layout_marginRight="@dimen/_8sdp"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
