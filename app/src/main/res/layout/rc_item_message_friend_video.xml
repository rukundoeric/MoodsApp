<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout3_for_video_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        style="@style/iconImageInMessageUserFriend">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/video_profile_friend_for_message_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/_2sdp"
            android:src="@drawable/avatar_default"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_message_video_rounder_for_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/balloon_incoming_normal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_3sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_3sdp">
        <LinearLayout
            android:id="@+id/layoutSizeControl_for_video_friend"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:padding="@dimen/_3sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/message_video_for_friend"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/avatar_default"
                        app:riv_border_color="#cecece"
                        app:riv_border_width="@dimen/_1sdp"
                        app:riv_corner_radius="@dimen/_3sdp"
                        app:riv_mutate_background="true" />
                    <LinearLayout
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:layout_marginRight="@dimen/_1sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/balloon_media_botshade" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_alignParentBottom="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true">
                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_video_sign_write" />
                        <com.moodsapp.emojis_library.Helper.EmojiconTextView
                            android:id="@+id/video_time_duration_in_friend"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:12"
                            android:layout_gravity="center"
                            android:textColor="@color/body_baground"
                            tools:ignore="UnusedIds" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/_5sdp">

                        <com.moodsapp.emojis_library.Helper.EmojiconTextView
                            android:id="@+id/time_message_video_for_friend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:39"
                            android:textColor="@color/body_baground" />
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">
                    <RelativeLayout
                        android:id="@+id/layout_back_for_any_friend_video_upload_content_buttons"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_4sdp"
                        android:layout_margin="@dimen/_4sdp"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/layout_rounder_for_any_user_retry_back">
                        <ImageView
                            android:layout_margin="@dimen/_10sdp"
                            android:id="@+id/upload_video_in_item_friend"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:visibility="visible"
                            android:src="@drawable/ic_download_media_icon_write"/>
                        <ImageView
                            android:id="@+id/cancel_upload_video_in_item_friend"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone"
                            android:src="@drawable/ic_icon_cancel_write"/>
                        <com.dinuscxj.progressbar.CircleProgressBar
                            android:id="@+id/lauding_proccess_progress_upload_video_friend"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@xml/progressbar"
                            android:visibility="gone"
                            app:draw_progress_text="false"
                            app:progress_end_color="#009ee2"
                            app:progress_start_color="#009ee2"
                            app:progress_stroke_cap="butt"
                            app:progress_stroke_width="@dimen/_10sdp"
                            />
                            <ProgressBar
                                android:id="@+id/lauding_progress_upload_video_friend"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background = "@xml/progressbar"
                                android:visibility="gone"
                                android:indeterminate="true"
                                android:indeterminateTintMode="src_atop"
                                android:indeterminateTint="@color/download_progress_color"
                                tools:ignore="UnusedAttribute"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/layout_back_for_any_friend_video_play_button"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/layout_rounder_for_any_user_retry_back">
                        <ImageView
                            android:id="@+id/play_video_in_item_friend"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/ic_video_play_conv"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>