<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout_message_date_for_text_message_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_27sdp"
                android:orientation="horizontal"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_32sdp"
                android:paddingTop="@dimen/_6sdp"
                android:background="@drawable/security_balloon_pressed"
                android:layout_marginLeft="@dimen/_11sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_32sdp"
                android:layout_marginStart="@dimen/_11sdp">
                <com.moodsapp.emojis_library.Helper.EmojiconChatTextView
                    android:id="@+id/date_text_for_message_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textColor="#626262"
                    android:textSize="@dimen/_11sdp"
                    android:text="12/09/ 2019"/>
            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/date_behind_icon_for_text_user_message"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_25sdp"
                android:contentDescription=""
                android:src="@drawable/avatar_default"
                app:civ_border_width="@dimen/_2sdp"
                app:civ_border_color="#5affffff"
                android:clickable="true"
                android:focusable="true" />
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/date_front_icon_for_text_user_message"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:layout_marginLeft="@dimen/_11sdp"
                android:contentDescription=""
                android:src="@drawable/avatar_default"
                app:civ_border_width="@dimen/_2sdp"
                app:civ_border_color="#5affffff"
                android:clickable="true"
                android:layout_marginStart="@dimen/_11sdp"
                android:focusable="true" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:id="@+id/layout1"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/message_user_wallpaper"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/balloon_outgoing_normal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp">
            <LinearLayout
                android:id="@+id/reply_layout_profile_information_in_item_message_user"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:paddingRight="@dimen/_10sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_5sdp"
                    android:visibility="visible"
                    android:background="@drawable/layout_transiparent_rounder_for_file_sender">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_reply_profile_pic_in_message_user"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/avatar_default"
                        app:civ_border_width="@dimen/_1sdp"
                        app:civ_border_color="@color/colorDecoration4"/>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:paddingRight="@dimen/_4sdp">
                            <com.moodsapp.emojis_library.Helper.EmojiconTextView
                                android:id="@+id/message_title_reply_in_item_message_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Eric"
                                android:textColor="@color/colorDecoration4"
                                android:textStyle="bold"
                                android:textSize="@dimen/abc_chat_conversation_message_replayed_title_text_size"
                                android:ellipsize="marquee"
                                android:paddingRight="@dimen/_15sdp"
                                android:singleLine="true"
                                />
                            <com.moodsapp.emojis_library.Helper.EmojiconTextView
                                android:id="@+id/message_reply_in_item_message_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="4"
                                android:ellipsize="end"
                                android:text="Hello how are you?"
                                android:textSize="@dimen/abc_chat_conversation_message_replayed_text_size"
                                android:paddingRight="@dimen/_15sdp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">
                <LinearLayout
                    android:gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/_5sdp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_gravity="bottom|right"
                    android:padding="@dimen/_4sdp"
                    android:textStyle="italic"
                    android:paddingEnd="@dimen/_5sdp">
                    <com.moodsapp.emojis_library.Helper.EmojiconTextView
                        android:id="@+id/any_user_message_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/abc_chat_conversation_time_text_size"
                        android:text="14:09"
                        android:textColor="#585858"/>
                    <ImageView
                        android:id="@+id/message_status_for_user_text_message"
                        android:layout_width="@dimen/abc_chat_conversation_message_status_icon_size_width"
                        android:layout_height="@dimen/abc_chat_conversation_message_status_icon_size_height"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:src="@drawable/bpg_message_saved_to_storage" />
                </LinearLayout>

                <com.moodsapp.emojis_library.Helper.EmojiconChatTextView
                    android:id="@+id/textContentUser"
                    android:autoLink="all"
                    android:textColorLink="@color/textColorLinkInMessageChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_10sdp"
                    emojicon:emojiconSize="@dimen/_18sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Hello how are ?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/abc_chat_conversation_message_text_size"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="left|center_vertical" />
            </FrameLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>