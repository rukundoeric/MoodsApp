<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_100sdp"
    android:layout_height="@dimen/_100sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="top"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/gallery_album_item_media_photo_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_gravity="bottom"
        android:background="#5d1c2834"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/gallery_album_item_media_album_icon"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_height="@dimen/_15sdp"
            app:srcCompat="@drawable/ic_folder_write"/>
        <TextView
            android:id="@+id/gallery_album_item_album_name"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/gallery_album_item_album_count"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/_9sdp" />
    </LinearLayout>

</FrameLayout>