<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_message_date_for_text_message_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_27sdp"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_6sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_32sdp"
                android:background="@drawable/security_balloon_pressed"
                android:layout_marginLeft="@dimen/_11sdp">
                <com.moodsapp.emojis_library.Helper.EmojiconChatTextView
                    android:id="@+id/date_text_for_message_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textColor="#626262"
                    android:textSize="@dimen/_11sdp"
                    android:text="12/09/ 2019"/>
            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/date_behind_icon_for_text_friend_message"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:contentDescription=""
                android:src="@drawable/avatar_default"
                app:civ_border_width="@dimen/_2sdp"
                app:civ_border_color="#5affffff"
                android:clickable="true" />
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/date_front_icon_for_text_friend_message"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:src="@drawable/avatar_default"
                app:civ_border_width="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_11sdp"
                app:civ_border_color="#5affffff"
                android:clickable="true" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_for_friend_chat_container">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                style="@style/iconImageInMessageUserFriend"
                android:layout_marginLeft="@dimen/_5sdp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_icon_for_friend_chat"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/avatar_default"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/message_friend_wallpaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/balloon_incoming_normal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp">
                <LinearLayout
                    android:id="@+id/reply_layout_profile_information_in_item_message_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/reply_layout_profile_information_text_enter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:visibility="visible"
                        android:background="@drawable/layout_transiparent_rounder_for_file_sender">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image_reply_profile_pic_in_message_friend"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/avatar_default"
                            app:civ_border_width="@dimen/_1sdp"
                            app:civ_border_color="@color/colorDecoration4"/>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:paddingRight="@dimen/_4sdp">
                                <com.moodsapp.emojis_library.Helper.EmojiconTextView
                                    android:id="@+id/message_title_reply_in_item_message_friend"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Eric"
                                    android:textColor="@color/colorDecoration4"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/abc_chat_conversation_message_replayed_title_text_size"
                                    android:ellipsize="marquee"
                                    android:paddingRight="@dimen/_15sdp"
                                    android:singleLine="true"
                                    />
                                <com.moodsapp.emojis_library.Helper.EmojiconTextView
                                    android:id="@+id/message_reply_in_item_message_friend"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="4"
                                    android:ellipsize="end"
                                    android:text="Hello how are you?"
                                    android:textSize="@dimen/abc_chat_conversation_message_replayed_text_size"
                                    android:paddingRight="@dimen/_15sdp"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">

                        <com.moodsapp.emojis_library.Helper.EmojiconTextView
                            android:id="@+id/any_message_time_in_friend_text_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/abc_chat_conversation_time_text_size"
                            android:text="14:09"
                            android:padding="@dimen/_4sdp"
                            android:layout_gravity="bottom|right"
                            android:textColor="#585858"/>
                    <com.moodsapp.emojis_library.Helper.EmojiconChatTextView
                        android:id="@+id/textContentFriend"
                        android:autoLink="all"
                        android:textColorLink="@color/textColorLinkInMessageChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_10sdp"
                        emojicon:emojiconSize="@dimen/_18sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="Hello how are ?"
                        android:textColor="@color/black"
                        android:textSize="@dimen/abc_chat_conversation_message_text_size"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_gravity="left|center_vertical" />
                </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>