<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/layout_for_friend_chat_document_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo">
    <LinearLayout
        style="@style/iconImageInMessageUserFriend"
        android:layout_marginLeft="@dimen/_5sdp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_icon_for_document_friend_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/avatar_default"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_message_document_rounder_for_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/balloon_incoming_normal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_3sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp">

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/pdf_first_page_view_in_document_friend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/avatar_default"
                    app:riv_corner_radius="3dp"
                    app:riv_border_width="0.5dp"
                    android:visibility="gone"
                    app:riv_border_color="#cecece"
                    app:riv_mutate_background="true"/>
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:padding="@dimen/_6sdp"
                    android:orientation="horizontal"
                    android:background="@drawable/layout_transiparent_rounder_for_file_sender">
                    <ImageView
                        android:id="@+id/doc_icon_for_document_friend"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/documents_icon_pdf"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <com.moodsapp.emojis_library.Helper.EmojiconTextView
                                android:id="@+id/doc_name_text_view_for_document_friend"
                                android:layout_width="match_parent"
                                android:minLines="1"
                                android:ellipsize="end"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_10sdp"
                                android:text="Document name"/>
                            <com.moodsapp.emojis_library.Helper.EmojiconTextView
                                android:id="@+id/doc_details_for_document_friend"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_8sdp"
                                android:minLines="1"
                                android:ellipsize="end"
                                android:text="Document Details"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:gravity="center">
                                <ImageView
                                    android:id="@+id/download_icon_for_item_friend_document"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    android:src="@drawable/inline_audio_download_normal"
                                    android:visibility="visible" />
                            <!--    <ImageView
                                    android:id="@+id/cancel_download_icon_for_item_friend_document"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/ic_icon_cancel_download_gray"
                                    android:visibility="gone" />-->
                                <com.dinuscxj.progressbar.CircleProgressBar
                                    android:id="@+id/lauding_progress_download_document_friend"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@xml/progressbar"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:visibility="gone"
                                    app:draw_progress_text="false"
                                    app:progress_end_color="#009ee2"
                                    app:progress_start_color="#009ee2"
                                    app:progress_stroke_cap="butt"
                                    app:progress_stroke_width="3.5dp"
                                    app:progress_text_color="#009ee2" />
                                <ProgressBar
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_centerVertical="true"
                                    android:id="@+id/progress_for_document_downloading_in_item_friend"
                                    android:visibility="gone"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.design.widget.CoordinatorLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_5sdp">
                <com.moodsapp.emojis_library.Helper.EmojiconTextView
                    android:id="@+id/any_message_time_in_document_friend_text_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="13:54"
                    android:textAllCaps="true"
                    android:textColor="#949292"
                    android:textSize="11dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>