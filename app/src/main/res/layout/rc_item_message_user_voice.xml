<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout_message_date_for_voice_message_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_27sdp"
                android:orientation="horizontal"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_32sdp"
                android:paddingTop="@dimen/_6sdp"
                android:background="@drawable/security_balloon_pressed"
                android:layout_marginLeft="@dimen/_11sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_32sdp"
                android:layout_marginStart="@dimen/_11sdp">
                <com.moodsapp.emojis_library.Helper.EmojiconChatTextView
                    android:id="@+id/date_voice_for_message_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textColor="#626262"
                    android:textSize="@dimen/_11sdp"
                    android:text="12/09/ 2019"/>
            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/date_behind_icon_for_voice_user_message"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_25sdp"
                android:contentDescription=""
                android:src="@drawable/avatar_default"
                app:civ_border_width="@dimen/_2sdp"
                app:civ_border_color="#5affffff"
                android:clickable="true"
                android:focusable="true" />
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/date_front_icon_for_voice_user_message"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:layout_marginLeft="@dimen/_11sdp"
                android:contentDescription=""
                android:src="@drawable/avatar_default"
                app:civ_border_width="@dimen/_2sdp"
                app:civ_border_color="#5affffff"
                android:clickable="true"
                android:layout_marginStart="@dimen/_11sdp"
                android:focusable="true" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:layout_width="match_parent"
        android:id="@+id/item_message_user_voice_container"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/layout_message_voice_rounder_for_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingRight="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/balloon_outgoing_normal">
            <LinearLayout
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_26sdp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_26sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/play_button_in_chat_message_voice_for_user"
                            android:layout_width="@dimen/_26sdp"
                            android:layout_height="@dimen/_26sdp"
                            android:src="@drawable/play_audio_button_icon"/>
                        <ImageView
                            android:id="@+id/upload_icon_for_item_user_voice"
                            android:layout_width="@dimen/_26sdp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/inline_audio_upload_normal"
                            android:visibility="gone" />
                     <!--   <ImageView
                            android:id="@+id/cancel_upload_voice_icon_for_item_user_voice"
                            android:layout_width="@dimen/_26sdp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/inline_audio_cancel_normal"
                            android:visibility="gone" />-->
                        <com.dinuscxj.progressbar.CircleProgressBar
                            android:id="@+id/auding_progress_download_voice_user"
                            android:layout_width="@dimen/_26sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@xml/progressbar"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            app:draw_progress_text="false"
                            app:progress_end_color="#009ee2"
                            app:progress_start_color="#009ee2"
                            app:progress_stroke_cap="butt"
                            app:progress_stroke_width="@dimen/_6sdp"
                            app:progress_text_color="#009ee2"
                            app:progress_text_size="@dimen/_10sdp" />
                        <ProgressBar
                            android:layout_width="@dimen/_26sdp"
                            android:layout_height="@dimen/_26sdp"
                            android:layout_centerVertical="true"
                            android:id="@+id/progress_for_voice_uploading_in_item_user_foice"
                            android:visibility="gone"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:indeterminate="true"
                            android:indeterminateTintMode="src_atop"
                            android:indeterminateTint="@color/download_progress_color"
                            tools:ignore="UnusedAttribute"/>
                        <RelativeLayout
                            android:id="@+id/record_icon_for_uploaded_voice_in_item_user_voice"
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="@dimen/_26sdp"
                            android:visibility="visible"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_alignParentRight="true"
                                android:id="@+id/image_icon_for_voice_user_chat_message"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/avatar_default"
                                />
                            <ImageView
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:visibility="visible"
                                android:src="@drawable/mic_background_incoming_normal"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentBottom="true"
                                />
                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:visibility="visible"
                                android:layout_marginLeft="@dimen/_1sdp"
                                android:src="@drawable/mic_played"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentBottom="true"
                                />
                        </RelativeLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_26sdp"
                        android:paddingRight="@dimen/_25sdp"
                        android:background="@drawable/chat_text_back_for_voice_sender">
                        <SeekBar
                            android:id="@+id/in_chat_item_voice_message_SeekBar_for_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:thumbTint="@color/download_progress_color"
                            android:progressTint="@color/download_progress_color"
                            tools:ignore="UnusedAttribute" />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.moodsapp.emojis_library.Helper.EmojiconTextView
                            android:id="@+id/time_duration_for_user_voice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:39"
                            android:textSize="@dimen/abc_chat_conversation_time_text_size"/>
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true">
                        <com.moodsapp.emojis_library.Helper.EmojiconTextView
                            android:id="@+id/time_message_image_for_user_voice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:39"
                            android:textSize="@dimen/abc_chat_conversation_time_text_size"/>
                        <ImageView
                            android:id="@+id/message_status_for_user_voice_message"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_width="@dimen/abc_chat_conversation_message_status_icon_size_width"
                            android:layout_height="@dimen/abc_chat_conversation_message_status_icon_size_height"
                            android:src="@drawable/bpg_message_saved_to_storage" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>