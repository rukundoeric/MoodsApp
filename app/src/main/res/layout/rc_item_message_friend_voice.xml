<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">
    <LinearLayout
        android:id="@+id/layout_message_date_for_voice_message_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_27sdp"
                android:orientation="horizontal"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_6sdp"
                android:paddingLeft="@dimen/_32sdp"
                android:background="@drawable/security_balloon_pressed"
                android:layout_marginLeft="@dimen/_11sdp">
                <com.moodsapp.emojis_library.Helper.EmojiconChatTextView
                    android:id="@+id/date_voice_for_message_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textColor="#626262"
                    android:textSize="@dimen/_11sdp"
                    android:text="12/09/ 2019"/>
            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/date_behind_icon_for_voice_friend_message"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:contentDescription=""
                android:src="@drawable/avatar_default"
                app:civ_border_width="@dimen/_2sdp"
                app:civ_border_color="#5affffff"
                android:clickable="true" />
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/date_front_icon_for_voice_friend_message"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:src="@drawable/avatar_default"
                app:civ_border_width="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_11sdp"
                app:civ_border_color="#5affffff"
                android:clickable="true" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_for_friend_chat_voice_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        style="@style/iconImageInMessageUserFriend"
        android:layout_marginLeft="@dimen/_5sdp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_icon_for_voice_friend_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/avatar_default"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/voice_message_friend_wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/balloon_incoming_normal"
        android:orientation="vertical"
        android:paddingRight="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_4sdp"
            android:paddingLeft="@dimen/_6sdp"
            android:paddingRight="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center">
                      <ImageView
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_in_chat_voice_message_pause_24dp"/>
                    <ImageView
                        android:id="@+id/play_voice_button_in_friend"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:visibility="visible"
                        android:src="@drawable/ic_in_voice_message_play"/>
                    <ImageView
                        android:id="@+id/download_icon_for_item_friend_voice"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/inline_audio_download_normal"
                        android:visibility="gone" />
          <!--          <ImageView
                        android:id="@+id/cancel_download_voice_icon_for_item_friend_voice"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/inline_audio_cancel_normal"
                        android:visibility="gone" />-->
                    <com.dinuscxj.progressbar.CircleProgressBar
                        android:id="@+id/auding_progress_download_voice_friend"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@xml/progressbar"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        app:draw_progress_text="false"
                        app:progress_end_color="#009ee2"
                        app:progress_start_color="#009ee2"
                        app:progress_stroke_cap="butt"
                        app:progress_stroke_width="@dimen/_6sdp"
                        app:progress_text_color="#009ee2"
                        app:progress_text_size="@dimen/_10sdp" />
                    <ProgressBar
                        android:id="@+id/interCheck_progress_for_voice_downloading_in_item_friend_voice"
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:indeterminate="true"
                        android:indeterminateTintMode="src_atop"
                        android:indeterminateTint="@color/download_progress_color"
                        app:targetApi="lollipop" />
                    <RelativeLayout
                        android:id="@+id/voice_alread_downloaded_icon_in_friend"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:visibility="visible"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_alignParentRight="true"
                            android:id="@+id/image_icon_for_voice_friend_chat_message"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/avatar_default"
                            />
                        <ImageView
                            android:layout_width="@dimen/_17sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:visibility="visible"
                            android:src="@drawable/mic_background_incoming_normal"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            />
                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:visibility="visible"
                            android:layout_marginLeft="@dimen/_1sdp"
                            android:src="@drawable/mic_played"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            />
                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/chat_text_back_for_voice_sender"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_20sdp">

                    <SeekBar
                        android:id="@+id/in_chat_item_voice_message_SeekBar_for_friend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:thumbTint="@color/download_progress_color"
                        android:progressTint="@color/download_progress_color"
                        android:layout_weight="1"
                        app:ignore="UnusedAttribute" /></LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_2sdp">

                <com.moodsapp.emojis_library.Helper.EmojiconTextView
                    android:id="@+id/any_message_time_duration_in_voice_friend_text_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="00:04"
                    android:textAllCaps="true"
                    android:textColor="#7e7e7e"
                    android:textSize="@dimen/_7sdp"
                    app:ignore="UnusedIds" />

                <com.moodsapp.emojis_library.Helper.EmojiconTextView
                    android:id="@+id/any_message_time_in_voice_friend_text_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="13:54"
                    android:textAllCaps="true"
                    android:textColor="#949292"
                    android:textSize="@dimen/_7sdp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>