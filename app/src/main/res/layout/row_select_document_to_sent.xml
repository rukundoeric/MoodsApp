<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content"
    android:id="@+id/layout_select_contact_container">
    <LinearLayout
        android:paddingLeft="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_6sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_7sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:padding="@dimen/_3sdp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/select_document_to_send_icon_background"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:background="@color/blue_trans">
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:id="@+id/select_document_to_send_icon_image"
            android:src="@drawable/icons_microsoft_word_trans"/>
            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <com.moodsapp.emojis_library.Helper.EmojiconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/select_document_to_send_document_name"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:textSize="@dimen/_10sdp"
                        android:text="Username"
                        android:textColor="#302e2e"/>
                    <com.moodsapp.emojis_library.Helper.EmojiconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/select_document_to_send_document_details"
                        android:layout_weight="1"
                        android:textSize="@dimen/_8sdp"
                        android:maxLines="1"
                        android:text="details" />
                </LinearLayout>
          <LinearLayout
              android:id="@+id/select_document_to_send_selected_icon_back"
              android:layout_width="@dimen/_50sdp"
              android:layout_height="match_parent"
              android:visibility="gone"
              android:gravity="center">
              <de.hdodenhof.circleimageview.CircleImageView
                  android:id="@+id/select_document_to_send_selected_document_icon"
                  android:layout_width="@dimen/_22sdp"
                  android:layout_height="@dimen/_22sdp"
                  android:src="@drawable/ic_icon_cheched_blue"
                  app:civ_border_width="@dimen/_3sdp"
                  app:civ_border_color="#9ab6e1"
                  android:layout_alignParentEnd="true"
                  android:layout_alignParentBottom="true"
                  android:layout_alignParentRight="true"
                  android:visibility="visible"
                  tools:ignore="VectorDrawableCompat" />
          </LinearLayout>
            </LinearLayout>
        </LinearLayout>
            </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_separator_top"/>
</LinearLayout>