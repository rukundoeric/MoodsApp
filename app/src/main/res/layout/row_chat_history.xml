<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_recent_chat_container"
    android:padding="@dimen/_1sdp">
    <LinearLayout
        android:id="@+id/ivent_conatiner_in_home_fragment"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/body_baground">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:paddingRight="@dimen/_8sdp"
            android:paddingLeft="@dimen/_4sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/ic_node"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/ivent_list_view_in_home_fragment"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp">
        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#e1e1e1"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp">
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_5sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="@dimen/_46sdp"
                android:layout_height="@dimen/_46sdp">
                    <RelativeLayout
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/_42sdp"
                        android:layout_height="@dimen/_42sdp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerInParent="true"
                        android:id="@+id/image_view_chat_history_dispay"
                        android:src="@drawable/avatar_default"/>
                    <com.moodsapp.emojis_library.Helper.EmojiconTextView
                        android:visibility="gone"
                        android:layout_width="@dimen/_11sdp"
                        android:layout_height="@dimen/_11sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/recent_chat_in_home_online_status"
                        android:background="@drawable/online_status_with_stroke"/>
                    </RelativeLayout>

            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_view_chat_history_username"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="Username"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="#302e2e"/>
                <TextView
                    android:id="@+id/last_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:54"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:textSize="@dimen/_9sdp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAllCaps="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_3sdp"
                android:id="@+id/layout_mesage_status"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/message_status_for_recentChat"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:src="@drawable/bpg_message_saved_to_server" />
                <com.moodsapp.emojis_library.Helper.EmojiconTextView
                    android:id="@+id/text_view_chat_history_last_message"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Hello how are ?"
                    emojicon:emojiconSize="@dimen/_10sdp"
                    android:textColor="#555555"/>
                <TextView
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:id="@+id/unread_count_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/body_baground"
                    android:text="345"
                    android:textSize="@dimen/_8sdp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:background="@drawable/unreadcounter"
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/_7sdp" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="end"
                    android:id="@+id/last_message_event_char"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_9sdp"
                    android:visibility="gone"
                    android:src="@drawable/avatar_default"/>
            </LinearLayout>
        </LinearLayout>
            </LinearLayout>
       <!-- <include layout="@layout/divider"/>-->
    </LinearLayout>
</LinearLayout>