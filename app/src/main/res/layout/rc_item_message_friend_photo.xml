<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_message_date_for_photo_message_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_27sdp"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_6sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_32sdp"
                android:background="@drawable/security_balloon_pressed"
                android:layout_marginLeft="@dimen/_11sdp">
                <com.moodsapp.emojis_library.Helper.EmojiconChatTextView
                    android:id="@+id/date_photo_for_message_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textColor="#626262"
                    android:textSize="@dimen/_11sdp"
                    android:text="12/09/ 2019"/>
            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/date_behind_icon_for_photo_friend_message"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:contentDescription=""
                android:src="@drawable/avatar_default"
                app:civ_border_width="@dimen/_2sdp"
                app:civ_border_color="#5affffff"
                android:clickable="true" />
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/date_front_icon_for_photo_friend_message"
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                android:src="@drawable/avatar_default"
                app:civ_border_width="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_11sdp"
                app:civ_border_color="#5affffff"
                android:clickable="true" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout3_for_photo_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        style="@style/iconImageInMessageUserFriend">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile_friend_for_message_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:src="@drawable/avatar_default"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_message_photo_rounder_for_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/balloon_incoming_normal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_3sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_3sdp">
        <LinearLayout
            android:id="@+id/layoutSizeControl_for_image_friend"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:padding="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/message_image_for_friend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/avatar_default"
                app:riv_border_color="#cecece"

                app:riv_corner_radius="@dimen/_3sdp"
                app:riv_mutate_background="true" />
            <LinearLayout
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_1sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/balloon_media_botshade" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal"
                android:paddingRight="@dimen/_5sdp">
                <com.moodsapp.emojis_library.Helper.EmojiconTextView
                    android:id="@+id/time_message_image_for_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:39"
                    android:textSize="@dimen/abc_chat_conversation_time_text_size"
                    android:textColor="@color/body_baground"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_retry_back_for_item_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/layout_rounder_for_any_user_retry_back"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/download_image_in_item_friend"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_download_media_icon_write"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/cancel_download_image_in_item_friend"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_icon_cancel_write" />

                <com.dinuscxj.progressbar.CircleProgressBar
                    android:id="@+id/lauding_progress_upload_image_friend"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@xml/progressbar"
                    android:visibility="visible"
                    app:draw_progress_text="false"
                    app:progress_end_color="#009ee2"
                    app:progress_start_color="#009ee2"
                    app:progress_stroke_cap="butt"
                    app:progress_stroke_width="10dp" />
                <ProgressBar
                    android:id="@+id/check_lauding_progress_upload_image_friend"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:visibility="visible"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:indeterminate="true"
                    android:indeterminateTintMode="src_atop"
                    android:indeterminateTint="@color/download_progress_color"
                    tools:ignore="UnusedAttribute" />
            </RelativeLayout>
        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>