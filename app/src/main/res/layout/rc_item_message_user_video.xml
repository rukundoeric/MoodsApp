<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:gravity="right"
android:orientation="horizontal"
android:id="@+id/item_message_user_video_container"
android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/layout_message_photo_rounder_for_user"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/_5sdp"
    android:paddingTop="@dimen/_3sdp"
    android:gravity="right"
    android:paddingBottom="@dimen/_5sdp"
    android:paddingLeft="@dimen/_7sdp"
    android:paddingRight="@dimen/_12sdp"
    android:background="@drawable/balloon_outgoing_normal">
    <LinearLayout
        android:id="@+id/mLayoutUserVideoSizeControl"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_250sdp"
        android:orientation="vertical"
        android:padding="@dimen/_2sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/message_video_for_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/avatar_default"
                    app:riv_corner_radius="@dimen/_3sdp"
                    app:riv_border_width="@dimen/_1sdp"
                    app:riv_border_color="#cecece"
                    app:riv_mutate_background="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:background="@drawable/balloon_media_botshade"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_2sdp">
                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/ic_video_sign_write" />
                    <com.moodsapp.emojis_library.Helper.EmojiconTextView
                        android:id="@+id/video_time_duration_in_user"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:textSize="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:12"
                        android:layout_gravity="center"
                        android:textColor="@color/body_baground"
                        tools:ignore="UnusedIds" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/_5sdp">
                    <com.moodsapp.emojis_library.Helper.EmojiconTextView
                        android:id="@+id/time_message_video_for_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:39"
                        android:textSize="@dimen/abc_chat_conversation_time_text_size"
                        android:textColor="@color/body_baground"/>
                    <ImageView
                        android:id="@+id/message_status_for_user_video_message"
                        android:layout_width="@dimen/abc_chat_conversation_message_status_icon_size_width"
                        android:layout_height="@dimen/abc_chat_conversation_message_status_icon_size_height"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:src="@drawable/bpg_message_saved_to_storage" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
                <RelativeLayout
                    android:id="@+id/layout_back_for_any_user_video_upload_content_buttons"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:layout_margin="@dimen/_1sdp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/layout_rounder_for_any_user_retry_back">

                    <LinearLayout
                        android:id="@+id/upload_image_in_item_user"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/upload_video_in_item_user"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:visibility="visible"
                            android:src="@drawable/ic_upload_media_icon_write"/>
                    <com.moodsapp.emojis_library.Helper.EmojiconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123KB"
                        android:lines="1"
                        android:textColor="#fff"
                        android:textSize="@dimen/abc_chat_conversation_message_replayed_text_size"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/cancel_upload_video_in_item_user"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:src="@drawable/ic_icon_cancel_write"
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                    <com.dinuscxj.progressbar.CircleProgressBar
                            android:id="@+id/lauding_proccess_progress_upload_video_user"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@xml/progressbar"
                            android:visibility="gone"
                            app:draw_progress_text="false"
                            app:progress_end_color="#009ee2"
                            app:progress_start_color="#009ee2"
                            app:progress_stroke_cap="butt"
                            app:progress_stroke_width="@dimen/_5sdp"
                            app:progress_text_color="#fff" />
                        <ProgressBar
                            android:id="@+id/lauding_progress_upload_video_user"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:background = "@xml/progressbar"
                            android:visibility="gone"
                            android:indeterminate="true"
                            android:indeterminateTintMode="src_atop"
                            android:indeterminateTint="@color/download_progress_color"
                            tools:ignore="UnusedAttribute"/>

                </RelativeLayout>
            <LinearLayout
                android:id="@+id/layout_back_for_any_user_video_play_button"
                android:layout_margin="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/layout_rounder_for_any_user_retry_back">
             <ImageView
                    android:id="@+id/play_video_in_item_user"
                    android:layout_width="@dimen/_23sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:src="@drawable/ic_video_play_conv"/>
            </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
</LinearLayout>

